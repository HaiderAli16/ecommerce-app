<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:text="Please write Your Shipment Details"
        android:textColor="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/shipment_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:hint="Your Name"
        android:background="@drawable/registertextview"
        android:layout_below="@id/txt"
        />

    <EditText
        android:id="@+id/shipment_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:hint="Your Phone Number"
        android:background="@drawable/registertextview"
        android:layout_below="@id/shipment_name"
        android:inputType="number"
    />

    <EditText
        android:id="@+id/shipment_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:hint="Your Address"
        android:background="@drawable/registertextview"
        android:layout_below="@id/shipment_phone"
        />
    <EditText
        android:id="@+id/shipment_city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:hint="Your City"
        android:background="@drawable/registertextview"
        android:layout_below="@id/shipment_address"
        />

    <Button
        android:id="@+id/confirm_final_orderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nextbtn"
        android:text="Confirm"
        android:textStyle="normal"
        android:textSize="30dp"
        android:textColor="#fff"
        android:onClick="orderConfirmed"
        android:layout_margin="30dp"/>



</RelativeLayout>