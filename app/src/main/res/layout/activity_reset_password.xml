<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/realative8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/reset_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_marginTop="10dp"

            />

    </RelativeLayout>

    <EditText
        android:id="@+id/findPhonenumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_below="@id/realative8"
        android:hint="Please Write Your Phone Number"
        android:background="@drawable/registertextview"
        android:padding="10dp"
        android:textColor="#000"
        android:inputType="number"/>

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer The Following Security Questions ?"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="26dp"
        android:textColor="#000"
        android:layout_below="@+id/findPhonenumber"
        />

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_below="@id/title_questions"
        android:hint="Your Born City ?"
        android:background="@drawable/registertextview"
        android:padding="10dp"
        android:textColor="#000"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_below="@id/question_1"
        android:hint="You Like Cricket ?"
        android:background="@drawable/registertextview"
        android:padding="10dp"
        android:textColor="#000"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_below="@id/question_2"
        android:background="@drawable/registerbtn"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="Verify"
        android:textSize="20dp"
        android:textStyle="normal"
        android:inputType="textMultiLine"/>

</RelativeLayout>