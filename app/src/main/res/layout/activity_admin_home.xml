<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">

    <TextView
        android:id="@+id/adminWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Welcome Dear Admin"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/check_approve_order_btn"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Check And Approve Order"
        android:layout_below="@id/adminWelcome"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:background="@drawable/registerbtn"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|normal"
        />

    <Button
    android:id="@+id/maintain_btn_admincategory"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/registerbtn"
    android:text="Maintain Product"
    android:layout_above="@id/admin_logout"
    android:textAllCaps="false"
    android:textColor="#fff"
    android:textSize="15sp"
    android:textStyle="bold|normal" />

    <Button
    android:id="@+id/check_orders_btn"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_above="@+id/admin_logout"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/registerbtn"
    android:text="Check Orders"
    android:textAllCaps="false"
    android:textColor="#fff"
    android:textSize="15sp"
    android:textStyle="bold|normal" />

    <Button
    android:id="@+id/admin_logout"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="10dp"
    android:layout_alignParentBottom="true"
    android:text="Log Out"
    android:textSize="15sp"
    android:textAllCaps="false"
    android:background="@drawable/registerbtn"
    android:textColor="#fff"
    android:layout_centerHorizontal="true"
    android:textStyle="bold|normal"
    />



</RelativeLayout>