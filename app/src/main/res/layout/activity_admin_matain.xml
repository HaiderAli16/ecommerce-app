<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".Admin.AdminMatainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            />
        <ImageView
            android:id="@+id/productImage_adminmaintain"
            android:layout_width="match_parent"
            android:src="@drawable/profile"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/productName_adminmaintain"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="45dp"
            android:hint="Product Name"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_below="@id/productImage_adminmaintain"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:background="@drawable/registertextview"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            android:id="@+id/productPrice_adminmaintain"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="45dp"
            android:hint="Product Price"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_below="@id/productName_adminmaintain"
            android:textAlignment="center"
            android:inputType="number"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:background="@drawable/registertextview"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            android:id="@+id/productDescription_adminmaintain"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="45dp"
            android:hint="Product Desription"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_below="@id/productPrice_adminmaintain"
            android:textAlignment="center"
            android:textSize="15sp"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:background="@drawable/registertextview"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/aplly_changes_button"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_below="@id/productDescription_adminmaintain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/registerbtn"
            android:text="Apply Changes"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/delete_changes_button"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_below="@id/aplly_changes_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/registerbtn"
            android:text="Delete This Product"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>